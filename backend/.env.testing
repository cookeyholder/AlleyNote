# 應用程式設定
APP_NAME=AlleyNote
APP_ENV=testing
APP_DEBUG=true
APP_URL=http://localhost
APP_KEY=base64:your-key-here

# 前端設定
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:8080
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# 測試環境使用記憶體資料庫
DB_CONNECTION=sqlite
DB_DATABASE=":memory:"

# PostgreSQL 設定 (大型部署時使用)
# DB_CONNECTION=pgsql
# DB_HOST=database
# DB_PORT=3306
# DB_DATABASE=alleynote
# DB_USERNAME=alleynote
# DB_PASSWORD=password
# DB_ROOT_PASSWORD=root

# 測試環境可使用記憶體資料庫
# DB_DATABASE=":memory:"

# SSL / Let's Encrypt 設定
SSL_DOMAIN=your-domain.com
SSL_EMAIL=admin@your-domain.com
CERTBOT_STAGING=true
FORCE_HTTPS=true
HSTS_MAX_AGE=63072000

# 上傳檔案設定
UPLOAD_MAX_SIZE=10M
UPLOAD_MAX_FILES=10
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx
STORAGE_PATH=/var/www/html/storage/files

# 快取設定
CACHE_TTL=3600
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=null

# 安全性設定
SESSION_LIFETIME=120
CSRF_TOKEN_LIFETIME=120

# 管理員帳號
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=Admin@123

# IP 控制設定
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_MINUTES=1

# 備份設定
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/var/www/html/storage/backups

# Telegram 通知設定
TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# JWT Configuration
# 測試環境使用 RSA 非對稱加密算法進行 JWT 簽名和驗證
