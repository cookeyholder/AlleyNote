# 應用程式設定
APP_NAME=AlleyNote
APP_ENV=testing
APP_DEBUG=true
APP_URL=http://localhost
APP_KEY=base64:test-key-for-testing-only

# 前端設定
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:8080
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# 測試環境使用記憶體資料庫
DB_CONNECTION=sqlite
DB_DATABASE=":memory:"

# PostgreSQL 設定（測試環境備選）
# DB_CONNECTION=pgsql
# DB_HOST=database
# DB_PORT=5432
# DB_DATABASE=alleynote_test
# DB_USERNAME=alleynote_test
# DB_PASSWORD=test_password

# SSL / Let's Encrypt 設定（測試環境停用）
SSL_DOMAIN=test.localhost
SSL_EMAIL=test@example.com
CERTBOT_STAGING=true
FORCE_HTTPS=false
HSTS_MAX_AGE=0

# 上傳檔案設定
UPLOAD_MAX_SIZE=10M
UPLOAD_MAX_FILES=10
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx
STORAGE_PATH=/var/www/html/storage/test-files

# 快取設定（測試環境）
CACHE_TTL=60
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=null

# 安全性設定（測試環境使用較短時間）
SESSION_LIFETIME=30
CSRF_TOKEN_LIFETIME=30

# 測試管理員帳號
ADMIN_EMAIL=test-admin@example.com
ADMIN_PASSWORD=TestAdmin@123456

# IP 控制設定（測試環境放寬限制）
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_MINUTES=1

# 備份設定
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=/var/www/html/storage/test-backups

# Telegram 通知設定（測試環境停用）
TELEGRAM_BOT_TOKEN=test-bot-token
TELEGRAM_CHAT_ID=test-chat-id

# JWT Configuration（測試環境）
# 測試環境使用 RSA 非對稱加密算法進行 JWT 簽名和驗證
JWT_ALGORITHM=RS256
JWT_ISSUER=alleynote-api-test
JWT_AUDIENCE=alleynote-client-test
JWT_ACCESS_TOKEN_TTL=3600
JWT_REFRESH_TOKEN_TTL=7200

# JWT Keys - 測試環境從外部文件載入金鑰，避免硬編碼
# 這些金鑰檔案已經存在於專案根目錄中
JWT_PRIVATE_KEY_PATH=test_private_key.pem
JWT_PUBLIC_KEY_PATH=test_public_key.pem
