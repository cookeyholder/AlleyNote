  "description": "AlleyNote 完整應用程式 - 前後端分離架構",
  "private": true,
  "scripts": {
    "backend:test": "cd backend && composer test",
    "backend:cs-fix": "cd backend && composer cs-fix",
    "backend:analyse": "cd backend && composer analyse",
    "backend:ci": "cd backend && composer ci",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:logs": "docker-compose logs -f",
    "migrate": "cd backend && php vendor/bin/phinx migrate",
    "migrate:rollback": "cd backend && php vendor/bin/phinx rollback",
    "seed": "cd backend && php vendor/bin/phinx seed:run"
