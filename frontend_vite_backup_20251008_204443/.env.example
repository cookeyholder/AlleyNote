# 環境變數範例檔案
# 複製此檔案為 .env.development, .env.staging, .env.production 使用

# 應用程式配置
VITE_APP_URL=http://localhost:5173
VITE_APP_VERSION=1.0.0

# API 配置
VITE_API_BASE_URL=http://localhost:8080/api
VITE_API_TIMEOUT=30000
VITE_ENABLE_API_LOGGER=true
VITE_ENABLE_API_MOCK=false

# JWT 配置
VITE_JWT_STORAGE_KEY=alleynote_token
VITE_JWT_REFRESH_THRESHOLD=300

# CSRF 配置
VITE_CSRF_HEADER_NAME=X-CSRF-TOKEN
VITE_CSRF_COOKIE_NAME=csrf_token

# 監控與分析
# Sentry 錯誤追蹤（選填）
VITE_SENTRY_DSN=
VITE_SENTRY_SAMPLE_RATE=1.0
VITE_SENTRY_ENVIRONMENT=development

# Google Analytics（選填）
VITE_GA_TRACKING_ID=

# Web Vitals 監控
VITE_ENABLE_WEB_VITALS=false

# PWA 配置
VITE_ENABLE_PWA=false
