{
    "name": "alleynote/alleynote",
    "type": "project",
    "description": "A modern bulletin board system",
    "keywords": [
        "bulletin-board",
        "php"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "ext-pdo": "*",
        "ext-json": "*",
        "monolog/monolog": "^2.0",
        "vlucas/phpdotenv": "^5.3",
        "ramsey/uuid": "^4.7",
        "psr/http-message": "^1.0",
        "psr/http-server-handler": "^1.0",
        "ezyang/htmlpurifier": "^4.16",
        "guzzlehttp/guzzle": "^7.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.4",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "src/Helpers/functions.php"
        ],
        "classmap": [
            "database/migrations"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "audit": "composer audit --format=json",
        "audit-report": "composer audit --format=json > security-audit-report.json || true"
    },
    "minimum-stability": "stable"
}
