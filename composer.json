{
    "name": "alleynote/alleynote",
    "type": "project",
    "description": "A modern bulletin board system",
    "keywords": [
        "bulletin-board",
        "php"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "ext-pdo": "*",
        "ext-json": "*",
        "monolog/monolog": "^2.0",
        "vlucas/phpdotenv": "^5.3",
        "ramsey/uuid": "^4.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "src/Helpers/functions.php"
        ],
        "classmap": [
            "database/migrations"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "minimum-stability": "stable"
}