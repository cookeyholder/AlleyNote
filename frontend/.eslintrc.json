{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2022
    },
    "globals": {
        "CKEDITOR": "readonly",
        "ClassicEditor": "readonly",
        "PasswordValidator": "readonly",
        "Chart": "readonly",
        "Navigo": "readonly",
        "DOMPurify": "readonly"
    },
    "rules": {
        "no-undef": "off",
        "no-unused-vars": "off",
        "no-useless-escape": "off"
    },
    "ignorePatterns": ["assets/**/*", "dist/**/*", "node_modules/**/*"]
}
